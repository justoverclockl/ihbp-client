{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "checkJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "typeRoots": ["./lib"],
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@client/*": ["client/*"],
      "@constants/*": ["constants/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
