{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node",
    "module": "ESNext",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"],
      "@constants/*": ["./src/constants/*"],
      "@client/*": ["./src/client/*"],
      "@pw/*": ["./src/password/*"],
      "@selectors/*": ["./src/constants/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
