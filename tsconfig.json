{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "lib",
    "paths": {
      "@/*": ["./src/*"],
      "@constants/*": ["./src/constants/*"],
      "@client/*": ["./src/client/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
